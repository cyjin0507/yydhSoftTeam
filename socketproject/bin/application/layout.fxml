<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Main">
   <children>
      <HBox prefHeight="28.0" prefWidth="400.0" spacing="5.0">
         <children>
            <TextField fx:id="userName" prefWidth="150.0" promptText="닉네임을 입력하세요" HBox.hgrow="ALWAYS" />
            <TextField fx:id="IPText" text="127.0.0.1" />
            <TextField fx:id="portText" prefWidth="80.0" text="9876" />
         </children>
      </HBox>
      <TextArea fx:id="textArea" editable="false" layoutY="28.0" prefHeight="331.0" prefWidth="400.0" />
      <TextField fx:id="input" disable="true" layoutX="95.0" layoutY="359.0" maxWidth="1.7976931348623157E308" onAction="#inputAction" prefHeight="23.0" prefWidth="205.0" />
      <Button fx:id="sendButton" disable="true" layoutX="316.0" layoutY="359.0" mnemonicParsing="false" onAction="#sendButtonAction" prefHeight="23.0" prefWidth="64.0" text="보내기" />
      <Button fx:id="connectionButton" layoutX="14.0" layoutY="359.0" mnemonicParsing="false" onAction="#connectionButtonAction" text="접속하기" />
   </children>
</AnchorPane>
